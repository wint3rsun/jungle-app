<section class="admin-dashboard-show">

  <header class="page-header">
    <h1>My Dashboard</h1>
  </header>

  <div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Products</h5>
        <p class="card-text">Total number of proudcts: <%= @product_count %></p>
        <%= link_to 'See All Products', [:admin, :products], class: 'btn btn-info' %>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Categories</h5>
        <p class="card-text">Total number of categories: <%= @category_count %></p>
        <%= link_to 'See All Products', [:admin, :products], class: 'btn btn-info' %>
      </div>
    </div>
  </div>
</div>
</section>
